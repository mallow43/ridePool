<%- include("partials/header")%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title%></div>
    <form action="/blogs/<%=blog._id%>?_method=PUT" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" required value="<%= blog.title%>">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="image" required value = "<%= blog.image%>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="body" id="" cols="30" required rows="10"><%= blog.body%></textarea>
        </div>
        <button class="ui inverted blue button inline">Submit!</button>

    </form>
</div>

<%- include("partials/footer")%>
